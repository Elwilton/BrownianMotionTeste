<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:local="clr-namespace:GraficoBrownianMotion.ViewModel"
             xmlns:local1="clr-namespace:GraficoBrownianMotion.Model.BrownianMotionApp.Model"
             x:Class="GraficoBrownianMotion.MainPage">

    <ContentPage.BindingContext>
        <local:MainViewModel/>
    </ContentPage.BindingContext>
    <StackLayout Padding="20">
        <Entry Placeholder="Initial Price" Keyboard="Numeric" Text="{Binding InitialPrice}" />
        <Entry Placeholder="Volatility" Keyboard="Numeric" Text="{Binding Volatility}" />
        <Entry Placeholder="Mean Return" Keyboard="Numeric" Text="{Binding MeanReturn}" />
        <Entry Placeholder="Number of Days" Keyboard="Numeric" Text="{Binding NumDays}" />
        
        <!-- Add GraphicsView to draw the graph -->
        <skia:SKCanvasView PaintSurface="OnCanvasViewPaintSurface"/>        
        <Button Text="Generate Brownian Motion" Command="{Binding GenerateBrownianMotionCommand}" />
    </StackLayout>

</ContentPage>

